@model CSM.Bataan.Web.ViewModels.Account.UpdateProfileViewModel
@{
    ViewData["Title"] = "Change Password";
    Layout = "~/views/shared/_publiclayout.cshtml";
}

<h2>Update Profile</h2>

<div class="row">
    <div class="col-md-6">
        <form action="~/account/update-profile" method="post">
            @Html.ValidationSummary()
            <div class="form-group">
                <label for="FirstName">First Name:</label>
                <input type="text" class="form-control" name="FirstName" value="@Model.FirstName"/>
            </div>
            <div class="form-group">
                <label for="LastName">Last Name:</label>
                <input type="text" class="form-control" name="LastName" value="@Model.LastName"/>
            </div>
            <button type="submit" class="btn btn-default btn-success">Update</button>
        </form>
    </div>
</div>